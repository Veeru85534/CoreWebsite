
<form asp-controller="User" asp-action="SignUp" class="m-1" method="post">
    <div class="col-md-7 m-auto card bg-light shadow-lg mb-5  rounded">
        <h3 class="text-center text-white mt-0 mb-4 p-3" style="background-color:#1d3557">Sign Up</h3>
        <div class="p-3">
            <div class="row">
                <div class="col form-group">
                    <label>First Name </label>
                    <input type="text" required autocomplete="off" name="First_Name" class="form-control form-control-sm " />
                </div>
                <div class="col form-group">
                    <label>Last Name </label>
                    <input type="text" required autocomplete="off" name="Last_Name" class="form-control form-control-sm " />
                </div>
            </div>
            <div class="row">
                <div class="col form-group">
                    <label>Phone No</label>
                    <input type="tel" pattern="[0-9]{10}" title="Please entry 10-digit Phone number" autocomplete="off" required name="Phone_No" maxlength="10" class="form-control form-control-sm " />
                </div>
                <div class="col form-group">
                    <label>Email Id</label>
                    <input type="email" autocomplete="off" required name="Email_Id" class="form-control form-control-sm " />
                </div>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input autocomplete="off" type="password" required name="Password" class="form-control form-control-sm " />
            </div>
            <h6 class="mt-3">Shipping Address</h6>
            <hr class="mb-0 mt-0" />
            <div class="form-group">
                <label>Address</label>
                <textarea required name="Address" class="form-control form-control-sm "></textarea>
            </div>
            <div class="row">
                <div class="col form-group">
                    <label>State</label>
                    <select required class="form-control" id="StateMasterPic" name="State"></select>
                </div>
                <div class="col form-group">
                    <label>City</label>
                    <select class="form-control" required disabled id="CityMasterPic" name="City"></select>
                </div>
            </div>
            <div class="row">
                <div class="col form-group">
                    <label>Country</label>
                    <input type="text" value="India" required name="Country" class="form-control form-control-sm " />
                </div>
                <div class="col form-group">
                    <label>Pin Code</label>
                    <input type="number" required name="Pin_Code" class="form-control form-control-sm " />
                </div>
            </div>
            <div class="m-4 text-center form-group">
                Your personal data will be used to support your experience throughout this website, to manage access to your account, and for other purposes described in our privacy policy.
            </div> 
            <div class="m-4 text-center form-group">
                <input type="submit" class="avoidDoubleClick btn btn-sm btn-danger" />
            </div>
            <div class="row">
                <div class="col text-center form-group">
                    <a class="text-decoration-none">Sign In</a>
                </div>
                <div class="col form-group text-center">
                    <a class="text-decoration-none">Forgotten Password</a>
                </div>
            </div>
        </div>
    </div>
</form>

