
<div class="container">
    <div class="col-md-4 mt-3 m-auto card p-3  shadow-lg mb-3 rounded border-0">
        <h4 class="text-center">Forgetting Password</h4>
        <form asp-controller="User" asp-action="ForgottenPassword" method="post" class="">
            <div class="form-group">
                <label>Enter you Email ID</label>
                <input type="email" required  autocomplete="off" name="Email" class="form-control" />
            </div>
            <div class="form-group text-center m-1">
                <span class="text-danger">@TempData["Error"]</span>
                <span class="text-success">@TempData["Message"]</span>
            </div>
            <div class="form-group text-center m-3">
                <input type="submit" class="btn btn-primary" />
            </div>
            <div class="form-group text-center m-3">
             <p>   Please enter Register Email Id,<br />
                    Password Reset link will sent to you registered Email Id.<br />                     
                </p>
            </div>
        </form>
    </div>
</div>