@model IEnumerable<CoreTechStatic.Models.User>


    <form asp-action="UserList" asp-controller="Admin" method="post" class="mb-3 mt-2">
        <div class="row d-flex justify-content-between">
            <div class="col-md-4 form-group">                
                <input type="text" required name="PhoneNumber" class="form-control" placeholder="User Phone Number"/>
            </div>
        <div class="col-md-4 form-group">
            <input type="text" required name="UserName" class="form-control" placeholder="User First Name"/>
            </div>
        <div class="col-md-2 form-group">
            <input type="submit" class="btn btn-sm btn-primary" />
            </div>
        </div>
    </form>
<div class="table-responsive">
    <table class="table table-bordered table-hover table-sm">
        <thead class="bg-secondary text-white">
            <tr>
                <th>ID</th>
                <th>Full_Name</th>
                <th>First_Name</th>
                <th>Last_Name</th>
                <th>Role</th>
                <th>Phone_Number</th>
                <th>Email_Id</th>
                <th>Created_Date</th>              
                <th>City</th>
                <th>State</th>
                <th>Country</th>
                <th>Pin_Code</th>
            </tr>
        </thead>
        <tbody class="bg-white">
            @if(Model.Count() == 0)
            {
                <tr>
                    <td colspan="20">
                        <h5 class="text-center text-danger" ><b>Empty</b></h5>
                    </td>
                </tr>
            }
            @foreach (var iteam in Model)
            {
                <tr>
                    <td>@iteam.User_Id</td>
                    <td>@iteam.User_Name</td>
                    <td>@iteam.First_Name</td>
                    <td>@iteam.Last_Name</td>
                    <td>@iteam.Role</td>
                    <td>@iteam.Phone_No</td>
                    <td>@iteam.Email_Id</td>
                    <td>@iteam.Created_Date</td>                    
                    <td>@iteam.CityMaster.CityName</td>                    
                    <td>@iteam.StateMaster.StateName</td>
                    <td>@iteam.Country</td>
                    <td>@iteam.Pin_Code</td>
                </tr>
                <tr>
                    <td colspan="2">
                        Address
                    </td>
                    <td colspan="4">
                        @iteam.Address
                    </td>
                    <td colspan="1">
                        Shipping Address
                    </td>
                    <td colspan="5">
                        @iteam.ShippingAddress
                    </td>
                    
                </tr>
                <tr class="m-0 p-0"><td class="m-0 p-0" colspan="20"><hr class="m-0 p-0" /></td></tr>
            }

        </tbody>
    </table>
</div>