@{
    ViewData["Title"] = "AddCategory";
}


<div class="h5">New Product</div>
<hr />
<form enctype="multipart/form-data" asp-controller="Admin" asp-action="AddCategory" method="post">
    <div class="row">
        <div class="col-md-3">
            <label class="form-label m-0 p-0">Name</label>
            <input type="text" required name="Ca_Name" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label m-0 p-0">Description</label>
            <input type="text" required name="Ca_Description" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label m-0 p-0">Image</label>
            <input type="file" required name="file" accept="image/*" class="form-control" />
        </div>       
    </div>
    <div class="form-group text-center m-2">
        <input type="submit" class="btn btn-primary btn-sm" />
    </div>
</form>
